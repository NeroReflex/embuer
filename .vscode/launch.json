    "version": "0.2.0",
    "configurations": [
        {
            "name": "Remote launch",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/embuer", // Local path.
            "initCommands": [
                "platform select remote-linux", // For example: 'remote-linux', 'remote-macosx', 'remote-android', etc.
                "platform connect connect://127.0.0.1:1234",
                "settings set target.inherit-env false",
            ],
            "env": {
                "PATH": "/usr/local/sbin:/usr/local/bin:/var/lib/flatpak/exports/bin:/usr/lib/rustup/bin",
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'embuer'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=embuer"
                ],
                "filter": {
                    "name": "embuer",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'embuer'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=embuer",
                    "--package=embuer"
                ],
                "filter": {
                    "name": "embuer",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'embuer'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=embuer",
                    "--package=embuer"
                ],
                "filter": {
                    "name": "embuer",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}